<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Eat-Da-Burger</h1>
        </div>
        <div class="row">
            <div class="col-sm-6 text-right">
                <h2>Burgers to devour</h2>
                <p>
                    {{#each burger}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </p>
            </div>
            <div class="col-sm-6 text-right">
                <h2>Devoured Burgers</h2>
                <p>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/if}}
                    {{/each}}
                </p>
            </div>
        </div>
        <div class="row">
            <form class="create-form">
                <div class="form-group text-center">
                    <div>
                        <label for="burger">Add a Burger!</label>
                    </div>
                    <input type="text" id="burger" name="name">
                </div>

            </form>
        </div>
        <div class="row">
            <button type="submit" class="btn btn-success" id="submit-burger">Submit!</button>
        </div>
    </div>
</div>